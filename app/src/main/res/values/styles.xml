<resources>
    <style name="AppTheme" parent="AppTheme.Base">

    </style>

    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textColorPrimaryInverse">@color/textColorInverse</item>
        <item name="android:colorBackground">@color/windowBackground</item>
    </style>
    <style name="AppTheme.ActionBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
    </style>
    <style name="AppTheme.ActionBar.Popup" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColor">@color/textColorInverse</item>
    </style>

    <style name="PresentationListCard" parent="CardView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardCornerRadius">@dimen/prompt_corner_radius</item>
        <item name="android:layout_margin">0dp</item>
        <item name="cardBackgroundColor">@color/promptBG</item>
        <item name="contentPadding">0dp</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
    </style>
    <style name="PresentationListCardName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/pres_list_name_size</item>
        <item name="android:layout_marginTop">@dimen/pres_list_card_padding</item>
        <item name="android:layout_marginLeft">@dimen/pres_list_card_padding</item>
        <item name="android:layout_marginRight">@dimen/pres_list_card_padding</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>
    <style name="PresentationListCardModified">
        <item name="android:gravity">right</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_below">@id/presentation_name</item>
        <item name="android:layout_alignRight">@id/presentation_name</item>
        <item name="android:textSize">@dimen/pres_list_modified_size</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginLeft">@dimen/pres_list_card_padding</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:layout_marginBottom">@dimen/pres_list_card_padding</item>
    </style>

    <style name="StepListItem">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">0.25</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <!--
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        -->
    </style>

    <style name="StepListLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/step_list_label_font_size</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:layout_marginTop">@dimen/step_list_item_padding_vertical</item>
        <item name="android:layout_marginBottom">-5dp</item>
        <item name="android:paddingLeft">@dimen/step_list_item_padding_horizontal</item>
    </style>
    <style name="StepListText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/step_list_font_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>

        <item name="android:shadowColor">@color/shadow</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">4</item>

        <item name="android:layout_marginBottom">@dimen/step_list_item_padding_vertical</item>
        <item name="android:paddingRight">@dimen/step_list_item_padding_horizontal</item>
        <item name="android:paddingLeft">@dimen/step_list_item_padding_horizontal</item>
    </style>

    <style name="StepListButton" parent="StepListItem">
        <item name="android:textSize">@dimen/step_list_button_font_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:padding">@dimen/default_padding</item>
    </style>

    <!--
    <style name="PromptWrapper">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:animateLayoutChanges">true</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:orientation">vertical</item>
    </style>
    -->

    <style name="PromptCard" parent="CardView">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardCornerRadius">@dimen/prompt_corner_radius</item>
        <item name="android:layout_marginTop">@dimen/prompt_spacing_top</item>
        <item name="android:layout_marginBottom">@dimen/prompt_spacing_bottom</item>
        <item name="android:layout_marginLeft">@dimen/activity_vertical_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_vertical_margin</item>
        <item name="cardBackgroundColor">@color/promptBG</item>
        <item name="contentPadding">0dp</item>
    </style>
    <style name="PromptCardContents">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/prompt_complete_bg_transition</item>
        <item name="android:padding">@dimen/default_padding</item>
        <item name="cardCornerRadius">@dimen/prompt_corner_radius</item>
    </style>

    <style name="PromptCard.Header" parent="PromptCard">
        <item name="cardBackgroundColor">@color/stepListBG</item>
        <item name="android:layout_marginTop">@dimen/prompt_header_margin_top</item>
    </style>
    <style name="PromptCard.Next" parent="PromptCard">
        <item name="android:layout_marginBottom">@dimen/prompt_spacing_top</item>
    </style>

    <style name="PromptCardContents.Header" parent="PromptCardContents">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="PromptButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignBottom">@id/card_view</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="PromptText" parent="StepListText">
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/prompt_font_size</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="PromptLabel" parent="PromptText">
        <item name="android:padding">0dp</item>
        <item name="android:shadowDy">2</item>
        <item name="android:textSize">@dimen/prompt_label_font_size</item>
    </style>
    <style name="PromptDateTimeFields" parent="PromptText">
        <item name="android:textSize">@dimen/prompt_datetime_size</item>
        <item name="android:layout_margin">@dimen/default_padding</item>
    </style>

</resources>
