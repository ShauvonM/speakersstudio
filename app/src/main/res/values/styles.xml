<resources>

    <!-- Base application theme.
    <style name="AppTheme" parent="AppTheme.Base">

    </style>
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textColorPrimaryInverse">@color/textColorInverse</item>
        <item name="android:colorBackground">@color/windowBackground</item>
        <item name="colorButtonNormal">@color/completedPromptBG</item>
    </style>
    <style name="AppTheme.ActionBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
    </style>
    <style name="AppTheme.ActionBar.Popup" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColor">@color/textColorInverse</item>
    </style>
    -->

    <style
        name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorPrimaryInverse">@color/textColorInverse</item>
        <item name="android:colorBackground">@color/windowBackground</item>
        <item name="colorButtonNormal">@color/colorAccent</item>
    </style>

    <style name="AppTheme.StepList">
    </style>

    <style name="AppTheme.Inverted">
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorAccentDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.Outline">
        <item name="colorPrimary">@color/outlineBG</item>
        <item name="colorPrimaryDark">@color/black_12</item>
        <item name="android:textColorPrimary">@color/outlineText</item>
        <item name="android:textColorPrimaryInverse">@android:color/white</item>
    </style>

    <style name="AppTheme.Settings" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.WithNavDrawer" />
    <style name="AppTheme.WithNavDrawer.Inverted">
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorAccentDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="ActionBarThemeOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@color/toolbar_text_primary</item>
        <item name="android:textColorSecondary">@color/toolbar_text_primary_subtitle</item>
    </style>
    <style name="ActionBarPopupThemeOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColor">@color/textColorInverse</item>
    </style>
    <style name="ActionBarThemeOverlay.Selection">
        <item name="android:background">@color/toolbar_selection_bg</item>
    </style>
    <style name="ActionBarThemeOverlay.Outline" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColor">@color/outlineText</item>
        <item name="android:textColorPrimary">@color/outlineText</item>
        <item name="android:textColorPrimaryInverse">@color/outlineText</item>
        <item name="android:textColorSecondary">@color/outlineText</item>
    </style>

    <style name="HeaderBar">
        <item name="android:background">?colorPrimary</item>
        <!--<item name="android:elevation">@dimen/headerbar_elevation</item>-->
    </style>

    <style name="FloatingActionButtonOnContent">

    </style>

    <!-- Text -->
    <style name="Body1" parent="TextAppearance.AppCompat.Body1">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="Body2" parent="TextAppearance.AppCompat.Body2">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="Body1.White" />

    <style name="Body2.White" />

    <style name="Body2.Black" />

    <style name="Body1.White.Primary">
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="Body2.White.Primary">
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="Body2.Black.Primary">
        <item name="android:textColor">@color/textColorInverse</item>
    </style>

    <!-- Navigation Drawer -->
    <style name="NavDrawerRowLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/nav_drawer_row_background</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="NavDrawerRowLayout.Main">
        <item name="android:tag">@string/tag_nav_drawer_main_entry</item>
    </style>

    <style name="NavDrawerRowLayout.Secondary">
        <item name="android:tag">@string/tag_nav_drawer_special_entry</item>
    </style>

    <style name="NavDrawerRowItemIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginLeft">@dimen/vertical_keyline_first</item>
    </style>

    <style name="NavDrawerRowText" parent="Body2.Black.Primary">
        <item name="android:textColor">@color/textColorInverse</item>
        <item name="android:layout_gravity">start|center_vertical</item>
        <item name="android:layout_marginLeft">@dimen/vertical_keyline_second</item>
    </style>


    <style name="ScrimInsetsLayout">
    </style>


    <!-- app stuff -->
    <style name="PresentationListCard" parent="CardView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardCornerRadius">@dimen/prompt_corner_radius</item>
        <item name="android:layout_margin">0dp</item>
        <item name="cardBackgroundColor">@color/colorAccent</item>
        <item name="contentPadding">0dp</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="PresentationListCard.OneColumn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginBottom">@dimen/pres_list_card_padding</item>
    </style>

    <style name="PresentationListCardSubmenu">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/ic_more_vert_white_24dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginRight">1dp</item>
    </style>

    <style name="PresentationListCardName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/pres_list_name_size</item>
        <item name="android:layout_marginTop">@dimen/pres_list_card_padding</item>
        <item name="android:layout_marginLeft">@dimen/pres_list_card_padding</item>
        <item name="android:layout_marginRight">@dimen/pres_list_card_padding</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layout_toLeftOf">@id/presentation_submenu</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="PresentationListCardName.OneColumn">
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="PresentationListCardModified">
        <item name="android:gravity">right</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_below">@id/presentation_name</item>
        <item name="android:layout_alignRight">@id/presentation_name</item>
        <item name="android:textSize">@dimen/pres_list_modified_size</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginLeft">@dimen/pres_list_card_padding</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="PresentationListCardProgress" parent="PresentationListCardModified">
        <item name="android:layout_below">@id/presentation_modified</item>
        <item name="android:layout_marginBottom">@dimen/pres_list_card_padding</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="PresentationListCardProgress.OneColumn">
        <item name="android:layout_alignLeft">@id/presentation_name</item>
        <item name="android:layout_alignRight">@id/presentation_progress</item>
        <item name="android:layout_below">@id/presentation_name</item>
        <item name="android:layout_marginBottom">@dimen/pres_list_card_padding</item>
        <item name="android:layout_marginLeft">0dp</item>
    </style>

    <style name="PresentationListCardModified.OneColumn">
        <item name="android:layout_toRightOf">@id/presentation_progress</item>
    </style>


    <style name="StepListView">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingBottom">@dimen/step_list_padding</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_above">@id/button_outline</item>
    </style>
    <style name="StepListItem">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">0.25</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <!--
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        -->
    </style>

    <style name="StepListLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/step_list_label_font_size</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:layout_marginTop">@dimen/step_list_item_padding_vertical</item>
        <item name="android:layout_marginBottom">-5dp</item>
        <item name="android:paddingLeft">@dimen/step_list_item_padding_horizontal</item>
    </style>

    <style name="StepListText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/step_list_font_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>

        <item name="android:shadowColor">@color/shadow</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">4</item>

        <item name="android:layout_marginBottom">@dimen/step_list_item_padding_vertical</item>
        <item name="android:paddingRight">@dimen/step_list_item_padding_horizontal</item>
        <item name="android:paddingLeft">@dimen/step_list_item_padding_horizontal</item>
    </style>

    <style name="StepListButton" parent="StepListItem">
        <item name="android:textSize">@dimen/step_list_button_font_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:padding">@dimen/default_padding</item>
        <item name="android:textColor">@drawable/outline_button_text</item>
        <item name="android:clickable">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <!--
    <style name="PromptWrapper">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:animateLayoutChanges">true</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:orientation">vertical</item>
    </style>
    -->

    <style name="PromptListHeader">
        <item name="android:padding">0dp</item>
    </style>

    <style name="PromptCard" parent="CardView">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardCornerRadius">@dimen/prompt_corner_radius</item>
        <item name="android:layout_marginTop">@dimen/prompt_spacing_top</item>
        <item name="android:layout_marginBottom">@dimen/prompt_spacing_bottom</item>
        <item name="android:layout_marginLeft">@dimen/activity_vertical_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_vertical_margin</item>
        <item name="cardBackgroundColor">@color/promptBG</item>
        <item name="contentPadding">0dp</item>
    </style>

    <style name="PromptCardContents">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/prompt_complete_bg_transition</item>
        <item name="android:padding">@dimen/default_padding</item>
        <item name="cardCornerRadius">@dimen/prompt_corner_radius</item>
    </style>

    <style name="PromptCard.Header" parent="PromptCard">
        <item name="cardBackgroundColor">@color/stepListBG</item>
        <item name="android:layout_marginTop">@dimen/prompt_header_margin_top</item>
    </style>

    <style name="PromptCard.Next" parent="PromptCard">
        <item name="android:layout_marginBottom">@dimen/prompt_spacing_top</item>
    </style>

    <style name="PromptCardContents.Header" parent="PromptCardContents">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="PromptButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignBottom">@id/card_view</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="PromptText" parent="StepListText">
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/prompt_font_size</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="PromptLabel" parent="PromptText">
        <item name="android:padding">0dp</item>
        <item name="android:shadowDy">2</item>
        <item name="android:textSize">@dimen/prompt_label_font_size</item>
    </style>

    <style name="PromptDateTimeFields" parent="PromptText">
        <item name="android:textSize">@dimen/prompt_datetime_size</item>
        <!-- <item name="android:layout_margin">@dimen/default_padding</item> -->
    </style>

    <style name="PresentationOutline">
        <item name="android:textColor">@color/outlineText</item>
        <item name="android:textColorPrimaryInverse">@android:color/white</item>
    </style>

    <style name="PresentationOutline.Text">
        <item name="android:textColor">@color/outlineText</item>
        <item name="android:textSize">@dimen/outline_text_size</item>
    </style>

    <style name="PresentationOutline.Text.Title">
        <item name="android:textSize">@dimen/outline_title_size</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="PresentationOutline.Text.Title.Sub">
        <item name="android:textSize">@dimen/outline_subtitle_size</item>
    </style>

    <style name="PresentationOutline.Text.Duration">
        <item name="android:textSize">@dimen/outline_duration_size</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
