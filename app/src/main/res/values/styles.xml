    <style name="PromptCard" parent="CardView">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardCornerRadius">@dimen/prompt_corner_radius</item>
        <item name="android:layout_marginTop">@dimen/prompt_spacing_top</item>
        <item name="android:layout_marginBottom">@dimen/prompt_spacing_bottom</item>
        <item name="android:layout_marginLeft">@dimen/activity_vertical_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_vertical_margin</item>
        <item name="cardBackgroundColor">@color/prompt_default_background</item>
        <item name="contentPadding">0dp</item>
    </style>

    <style name="PromptCardContents">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/prompt_complete_bg_transition</item>
        <item name="android:padding">@dimen/default_padding</item>
        <item name="cardCornerRadius">@dimen/prompt_corner_radius</item>
    </style>

    <style name="PromptCard.Next" parent="PromptCard">
        <item name="android:layout_marginBottom">@dimen/prompt_spacing_top</item>
    </style>

    <style name="PromptCardContents.Header" parent="PromptCardContents">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="PromptButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignBottom">@id/card_view</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="PromptText" parent="StepListText">
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/prompt_font_size</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="PromptLabel" parent="PromptText">
        <item name="android:padding">0dp</item>
        <item name="android:shadowDy">2</item>
        <item name="android:textSize">@dimen/prompt_label_font_size</item>
    </style>

    <style name="PromptDateTimeFields" parent="PromptText">
        <item name="android:textSize">@dimen/prompt_datetime_size</item>
        <!-- <item name="android:layout_margin">@dimen/default_padding</item> -->
    </style>

    <style name="PresentationOutline">
        <item name="android:textColor">@color/outlineText</item>
        <item name="android:textColorPrimaryInverse">@android:color/white</item>
    </style>

    <style name="PresentationOutline.Text">
        <item name="android:textColor">@color/outlineText</item>
        <item name="android:textSize">@dimen/outline_text_size</item>
    </style>

    <style name="PresentationOutline.Text.Bullet">
        <item name="android:layout_width">@dimen/icon_size_24</item>
        <item name="android:layout_height">@dimen/icon_size_24</item>
        <item name="android:background">@color/outlineColor1</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingLeft">3dp</item>
        <item name="android:paddingRight">3dp</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:paddingBottom">1dp</item>
    </style>

    <style name="PresentationOutline.Text.Title">
        <item name="android:textSize">@dimen/outline_title_size</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="PresentationOutline.Text.Title.Sub">
        <item name="android:textSize">@dimen/outline_subtitle_size</item>
    </style>

    <style name="PresentationOutline.Text.Duration">
        <item name="android:textSize">@dimen/outline_duration_size</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

