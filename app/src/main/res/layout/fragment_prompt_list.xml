<?xml version="1.0" encoding="utf-8"?>
<com.thespeakers_studio.thespeakersstudioapp.ui.SmartScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/prompt_list_scroll"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:fillViewport="true"
    android:overScrollMode="never"
    android:scrollbars="none"
    android:padding="0dp">

    <com.thespeakers_studio.thespeakersstudioapp.ui.PromptListView
        android:id="@+id/prompt_list"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:paddingBottom="@dimen/prompt_spacing_top"
        />

</com.thespeakers_studio.thespeakersstudioapp.ui.SmartScrollView>
