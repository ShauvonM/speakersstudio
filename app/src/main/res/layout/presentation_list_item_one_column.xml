<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res/android"
    style="@style/PresentationListCard.OneColumn">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/presentation_submenu"
            style="@style/PresentationListCardSubmenu"
            android:contentDescription="@string/cd_submenu"
            />

        <TextView
            android:id="@+id/presentation_name"
            android:text="@string/lorem_ipsum_words"
            style="@style/PresentationListCardName.OneColumn"
            />

        <TextView
            android:id="@+id/presentation_progress"
            android:text="@string/default_completion"
            style="@style/PresentationListCardProgress.OneColumn"
            />

        <TextView
            android:id="@+id/presentation_modified"
            android:text="@string/default_modified"
            style="@style/PresentationListCardModified.OneColumn"
            />

    </RelativeLayout>

</android.support.v7.widget.CardView>