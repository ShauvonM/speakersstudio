<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/list_main_bullet"
        android:text="@string/default_bullet"
        style="@style/PresentationOutline.Text.Bullet" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_duration"
        android:text="@string/default_timer"
        style="@style/PresentationOutline.Text.Duration"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBaseline="@id/list_main_bullet"
        android:layout_marginLeft="@dimen/outline_list_bullet_spacing"
        android:layout_marginStart="@dimen/outline_list_bullet_spacing" />

    <TextView
        android:id="@+id/list_topic"
        android:layout_toRightOf="@id/list_main_bullet"
        android:layout_toEndOf="@id/list_main_bullet"
        android:layout_toLeftOf="@id/list_duration"
        android:layout_toStartOf="@id/list_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/outline_list_bullet_spacing"
        android:layout_marginStart="@dimen/outline_list_bullet_spacing"
        style="@style/PresentationOutline.Text"
        android:text="@string/lorem_ipsum_sentence"
        />

    <LinearLayout
        android:id="@+id/outline_sub_item_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_topic"
        android:layout_alignLeft="@id/list_topic"
        android:layout_alignStart="@id/list_topic"
        android:orientation="vertical"
        android:paddingTop="@dimen/outline_list_spacing"
        android:paddingLeft="@dimen/outline_list_tab"
        android:paddingStart="@dimen/outline_list_tab"
        android:paddingRight="@dimen/outline_list_tab"
        android:paddingEnd="@dimen/outline_list_tab">

    </LinearLayout>

</RelativeLayout>
