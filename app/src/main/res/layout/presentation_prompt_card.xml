<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        style="@style/PromptCard">

        <RelativeLayout
            android:id="@+id/card_view_contents"
            style="@style/PromptCardContents">

            <TextView
                android:id="@+id/card_text"
                android:text="What is the Topic?"
                style="@style/PromptText" />


            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/prompt_edit_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                >

                <TextView
                    android:id="@+id/card_label"
                    android:text="What is the Topic?"
                    style="@style/PromptLabel"
                    />

            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <include layout="@layout/prompt_buttons" />

</merge>