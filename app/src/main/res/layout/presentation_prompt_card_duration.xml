<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/card_label"
        android:text="What is the Topic?"
        style="@style/PromptLabel"
        />

    <Spinner
        android:id="@+id/duration_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:spinnerMode="dropdown"
        style="@style/PromptDateTimeFields">
    </Spinner>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/custom_duration_input_layout"
        android:visibility="gone"
        android:hint="@string/custom_duration_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/custom_duration_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:layout_margin="@dimen/default_padding">
        </android.support.design.widget.TextInputEditText>

    </android.support.design.widget.TextInputLayout>

</merge>