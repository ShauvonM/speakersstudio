<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!--
    Name
    Email
    Phone
    -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            style="@style/PromptEditTextIcon"
            android:src="@drawable/ic_domain_black_24dp"
             />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/company_input_layout"
            android:hint="@string/contactinfo_company_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/company_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapWords"
                android:maxLines="1"
                android:textColor="?colorPrimary"
                />
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            style="@style/PromptEditTextIcon"
            android:src="@drawable/ic_public_black_24dp"
             />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/company_website_input_layout"
            android:hint="@string/contactinfo_company_website_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/company_website_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapWords"
                android:maxLines="1"
                android:textColor="?colorPrimary"
                />
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            style="@style/PromptEditTextIcon"
            android:src="@drawable/ic_person_black_24dp"
             />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/name_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/contactinfo_name_hint"
            >
            <android.support.design.widget.TextInputEditText
                android:id="@+id/name_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName|textCapWords"
                android:maxLines="1"
                android:textColor="?colorPrimary"
                />
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            style="@style/PromptEditTextIcon"
            android:src="@drawable/ic_mail_black_24dp"
             />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/email_input_layout"
            android:hint="@string/contactinfo_email_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/email_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:textColor="?colorPrimary"
                />
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            style="@style/PromptEditTextIcon"
            android:src="@drawable/ic_call_black_24dp"
             />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/phone_input_layout"
            android:hint="@string/contactinfo_phone_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/phone_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:textColor="?colorPrimary"
                />
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>

</LinearLayout>
</merge>